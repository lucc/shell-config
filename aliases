# general aliases {{{1
alias cp='cp -ip'
alias d=diff-wrapper.bash
alias grep='grep --extended-regexp --color=auto --ignore-case'
#alias l='ls -l --time-style=full-iso'
alias l='ls -l'
alias L='ls -l --time-style=+%F\ %H:%M:%S'
alias lh='L -h'
function lr () {
  local ignore='.git|.svn|__pycache__|*.egg-info|*.pyc|.stack-work|latex.out'
  [[ -e Cargo.toml || -e Cargo.lock ]] && ignore+='|target'
  tree -aCI "$ignore" "${@:-.}"
}
alias ls='ls --color=auto'
alias la='ls -A'
alias lla='l -A'
alias mv='mv -i'
alias scp='scp -p'
alias mkdir='mkdir -p'
alias nload='nload -i 6144 -o 1024'
alias diff=colordiff
alias qmv='qmv --format=destination-only'
alias py=ipython
alias hs='stack ghci'

